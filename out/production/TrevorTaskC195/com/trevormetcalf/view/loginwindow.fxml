<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" fx:controller="com.trevormetcalf.controller.LoginController"
          prefHeight="500.0" prefWidth="800.0"
          alignment="center" hgap="10" vgap="10" stylesheets="@../trevortaskc195/style.css" styleClass="default">

    <Label fx:id="userLabel" text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label"/>
    <Label fx:id="passwordLabel" text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label"/>
    <TextField fx:id="loginUsername" GridPane.columnIndex="1" GridPane.rowIndex="0"
               onKeyReleased="#handleKeyReleased" onKeyPressed="#handleKeyPressed" styleClass="textField"/>
    <PasswordField fx:id="loginPassword" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   onKeyReleased="#handleKeyReleased" onKeyPressed="#handleKeyPressed" styleClass="textField"/>
    <Button fx:id="loginButton" text="Login" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"
            minWidth="250" onAction="#handleLoginButton" styleClass="button"/>


</GridPane>